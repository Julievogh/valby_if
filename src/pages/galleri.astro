<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <meta name="generator" content={Astro.generator} />

    <title>Valby IF</title>
    <link rel="stylesheet" href="./src/css/generel.css" />
    <link rel="stylesheet" href="/src/css/index.css" />
  </head>
  <body>
    <header>
      <Navbar />
    </header>

    <main>
      <div class="container">
        <h1>Galleri</h1>

        <h2>Videoer</h2>

        <div class="video-container">
          <div class="video-wrapper">
            <iframe
              src="https://www.youtube.com/embed/joW-nj-cg64"
              frameborder="0"
              allowfullscreen></iframe>
          </div>
          <div class="video-wrapper">
            <iframe
              src="https://www.youtube.com/embed/Oqrr-LuSjbs"
              frameborder="0"
              allowfullscreen></iframe>
          </div>
          <div class="video-wrapper">
            <iframe
              src="https://www.youtube.com/embed/Sygec2Ri1MU"
              frameborder="0"
              allowfullscreen></iframe>
          </div>
        </div>

        <h2>Billeder</h2>

        <div class="image-container">
          {
            getValbyIfGallery.map((data) => {
              return (
                <GalleriComponent img_url={data.img_url}></GalleriComponent>
              );
            })
          };
        </div>
        <div class="popup-image">
          <span>&times;</span>
          <img src="#" alt="Gallery image" />
        </div>
      </div>
    </main>

    <footer></footer>
  </body>
</html>

<script>
  document.querySelectorAll(".image-container img").forEach((image) => {
    image.addEventListener("click", () => {
      console.log("click");
      document.querySelector(".popup-image").style.display = "block";
      document.querySelector(".popup-image img").src =
        image.getAttribute("src");
    });
  });

  document.querySelector(".popup-image span").addEventListener("click", () => {
    document.querySelector(".popup-image").style.display = "none";
  });
</script>
