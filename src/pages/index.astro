---
import Navbar from "../components/Navbar.astro";
import Familien from "../components/Familien.astro";
import Nyheder from "../components/NyhederComponent.astro";
import InfoContainer from "../components/InfoContainer.astro";
const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <meta name="generator" content={Astro.generator} />

    <title>Valby IF</title>
    <link rel="stylesheet" href="./src/css/generel.css" />
    <link rel="stylesheet" href="/src/css/index.css" />
  </head>


  <body>
    <div class="hero">
      <video autoplay loop muted plays-inline class="back_video">
        <source src="../public/imgs/testvideo.mp4" type="video/mp4" />
      </video>
      <header><Navbar /></header>
    </div>
    <main>
      <div class="farvelinje1">
        <img src="../public/imgs/farvelinje.svg" alt="" />
      </div>
      <div class="welcome">
        <h1>Velkommen til Valby IF</h1>
        <h3>Fællesskab fødes når jeg bliver til os</h3>
      </div>

      <Nyheder />

      <InfoContainer />

      <Familien />
    </main>
    <footer></footer>
  </body>
</html>
