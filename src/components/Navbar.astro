<script>
  document.addEventListener("DOMContentLoaded", function () {
    const mainHeader = document.getElementById("mainHeader");
    const navbar = document.querySelector(".navbar");
    const navbar2 = document.querySelector(".navbar2");

    window.addEventListener("scroll", function () {
      const scrollPosition =
        window.scrollY || document.documentElement.scrollTop;

      if (scrollPosition > navbar.offsetHeight) {
        navbar2.classList.add("fixed-navbar2");
      } else {
        navbar2.classList.remove("fixed-navbar2");
      }
    });

    const omOsMenuItem = document.querySelector(".menu-item-omos");
    const dropdown = document.querySelector(".dropdown");

    if (omOsMenuItem && dropdown) {
      omOsMenuItem.addEventListener("mouseover", function () {
        dropdown.style.display = "block";
      });

      omOsMenuItem.addEventListener("mouseout", function () {
        dropdown.style.display = "none";
      });
    }

    const mobileMenuToggle = document.getElementById("mobile-menu");
    const menu2 = document.querySelector(".menu2");

    if (mobileMenuToggle && menu2) {
      mobileMenuToggle.addEventListener("click", function () {
        menu2.classList.toggle("show");
      });
    }
  });
</script>
